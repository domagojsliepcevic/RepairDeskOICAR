@if (Data != null)
{
    <form>
        <fieldset disabled>
            <div class="form-group">
                <label for="id" class="h3"># <span>@Data.Id</span></label>
            </div>

            <div class="form-group">
                <label for="user">User:</label>
                <input id="user" class="form-control" value="@Data.User" />
            </div>

            <div class="form-group">
                <label for="orderdate">Order Date:</label>
                <input id="orderdate" class="form-control" value="@Data.OrderDate.ToString("dd-MM-yyyy")" />
            </div>

            <div class="form-group">
                <label for="amount">Total Amount:</label>
                <input id="amount" class="form-control" value="@Data.TotalAmount.ToString("#,##0.00") €" />
            </div>

            <div class="form-group">
                <label for="status">Status:</label>
                <input id="status" class="form-control" value="@Data.Status" />
            </div>
        </fieldset>
    </form>
}

@code {
    [Parameter, EditorRequired]
    public OrderDetailsModel Data { get; set; }
}