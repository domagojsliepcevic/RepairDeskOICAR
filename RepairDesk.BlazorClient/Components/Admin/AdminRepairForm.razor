@if (Data != null)
{
    <form>
        <fieldset disabled>
            <div class="form-group">
                <label for="id" class="h3"># <span>@Data.Id</span></label>
            </div>

            <div class="form-group">
                <label for="user">User:</label>
                <input id="user" class="form-control" value="@Data.User" />
            </div>

            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" class="form-control" value="@Data.Description">
                </textarea>
            </div>

            <div class="form-group">
                <label for="requestdate">Request Date:</label>
                <input id="requestdate" class="form-control" value="@Data.RequestDate.ToString("dd-MM-yyyy")" />
            </div>

            <div class="form-group">
                <label for="finishdate">Finish Date:</label>
                <input id="finishdate" class="form-control" value="@(Data.FinishDate?.ToString("dd-MM-yyyy") ?? "---")" />
            </div>

            <div class="form-group">
                <label for="status">Status:</label>
                <input id="status" class="form-control" value="@Data.Status" />
            </div>
        </fieldset>
    </form>
}

@code {
    [Parameter, EditorRequired]
    public RepairDetailsModel Data { get; set; }
}